<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <!--初始化数据-->
    <servlet>
        <servlet-name>InitServlet</servlet-name>
        <servlet-class>com.mooc.Servlet.InitServlet</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>InitServlet</servlet-name>
        <url-pattern>/InitServlet</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>com.mooc.Filter.EncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>*</url-pattern>
    </filter-mapping>
    
    <welcome-file-list>
        <welcome-file>/index.jsp</welcome-file>
    </welcome-file-list>


    <!--登录-->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.mooc.Servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/server.do</url-pattern>
    </servlet-mapping>
    <!--URLMAPPING-->
    
    <servlet>
        <servlet-name>URLMapServlet</servlet-name>
        <servlet-class>com.mooc.Servlet.URLMapServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>URLMapServlet</servlet-name>
        <url-pattern>/mook_course</url-pattern>
        <url-pattern>/top.do</url-pattern>
        <url-pattern>/left.do</url-pattern>
        <url-pattern>/mooc/addUser.do</url-pattern>
        <url-pattern>/mooc/courseImport.do</url-pattern>
        <url-pattern>/mooc/selectUser.do</url-pattern>
        <url-pattern>/mooc/selectCourse.do</url-pattern>
        <url-pattern>/mooc/addCourse.do</url-pattern>
    </servlet-mapping>

    <!--添加课程-->
    <servlet>
        <servlet-name>AddCourseServlet</servlet-name>
        <servlet-class>com.mooc.Servlet.AddCourseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddCourseServlet</servlet-name>
        <url-pattern>/AddCourseServlet</url-pattern>
    </servlet-mapping>

    <!--课程导入-->
    <servlet>
        <servlet-name>CourseImportServlet</servlet-name>
        <servlet-class>com.mooc.Servlet.CourseImportServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CourseImportServlet</servlet-name>
        <url-pattern>/CourseImportServlet</url-pattern>
    </servlet-mapping>
    <!--AddUserServlet-->
    <servlet>
        <servlet-name>AddUserServlet</servlet-name>
        <servlet-class>com.mooc.Servlet.AddUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddUserServlet</servlet-name>
        <url-pattern>/AddUserServlet</url-pattern>
    </servlet-mapping>
    <!--删除用户-->
    <servlet>
        <servlet-name>DeleteUserServlet</servlet-name>
        <servlet-class>com.mooc.Servlet.DeleteUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteUserServlet</servlet-name>
        <url-pattern>/DeleteUser</url-pattern>
    </servlet-mapping>
    <!--导出课程-->
    <servlet>
        <servlet-name>ExportClassServlet</servlet-name>
        <servlet-class>com.mooc.Servlet.ExportCourseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ExportClassServlet</servlet-name>
        <url-pattern>/mooc/ExportCourseServlet.do</url-pattern>
    </servlet-mapping>
    <!--page查询-->
    <servlet>
        <servlet-name>PageSearchServlet</servlet-name>
        <servlet-class>com.mooc.Servlet.PageSearchServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PageSearchServlet</servlet-name>
        <url-pattern>/searchCourse</url-pattern>
    </servlet-mapping>
    <!--分页-->
    <servlet>
        <servlet-name>PagePartionServlet</servlet-name>
        <servlet-class>com.mooc.Servlet.PagePartionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PagePartionServlet</servlet-name>
        <url-pattern>/PagePartionServlet</url-pattern>
    </servlet-mapping>
    <!--basePath-->
    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <include-prelude>/WEB-INF/views/basePath.jsp</include-prelude>
        </jsp-property-group>
    </jsp-config>
    <!--验证码页面-->
    <servlet>
        <servlet-name>CaptcahCodeJsp</servlet-name>
        <servlet-class>com.mooc.Servlet.CodeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CaptcahCodeJsp</servlet-name>
        <url-pattern>/code</url-pattern>
    </servlet-mapping>
</web-app>